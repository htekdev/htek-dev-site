  description="Enterprise consulting for GitHub migrations, AI adoption, and cloud architecture. Book a free consultation with Hector Flores."
>
  <Navbar />
  <main id="main-content">

    <!-- Hero -->
    <section id="consulting-hero" class="relative min-h-[70vh] flex items-center bg-bg-void overflow-hidden">
      <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
        <div class="w-[600px] h-[600px] bg-accent-cyan/5 rounded-full blur-3xl"></div>
      </div>
