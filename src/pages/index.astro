---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
---

<BaseLayout>
  <Navbar />
  <main>
    <!-- Hero Section placeholder -->
    <section id="hero" class="min-h-screen flex items-center justify-center pt-20">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-heading font-bold mb-4">
          <span class="bg-gradient-to-r from-accent-cyan via-accent-purple to-accent-pink bg-clip-text text-transparent">
            Hector Flores
          </span>
        </h1>
        <p class="text-xl text-text-secondary font-mono">
          &gt; Senior Solutions Engineer @ Microsoft_
        </p>
      </div>
    </section>

    <!-- Section placeholders for later -->
    <section id="about" class="min-h-screen py-20"></section>
    <section id="timeline" class="min-h-screen py-20"></section>
    <section id="projects" class="min-h-screen py-20"></section>
    <section id="blog" class="min-h-screen py-20"></section>
    <section id="skills" class="min-h-screen py-20"></section>
    <section id="contact" class="min-h-screen py-20"></section>
  </main>
</BaseLayout>
