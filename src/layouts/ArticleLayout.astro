---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  heroImage?: string;
  readingTime?: string;
}

const { title, description, pubDate, updatedDate, tags, heroImage, readingTime } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={`${title} — htek.dev`}
  description={description}
  seoType="article"
  publishDate={pubDate}
  modifiedDate={updatedDate}
  tags={tags}
  image={heroImage}
>
  <Navbar />

  <main class="max-w-3xl mx-auto px-6 pt-32 pb-16">
    <a href="/articles" class="text-accent-cyan text-sm hover:underline">
      ← Back to Articles
    </a>

    <header class="mt-8">
      <h1 class="text-3xl md:text-5xl font-heading font-bold leading-tight">
        {title}
      </h1>

      <div class="flex flex-wrap items-center gap-3 mt-4">
        <time datetime={pubDate.toISOString()} class="text-text-muted text-sm">
          {formattedDate}
        </time>
        {formattedUpdatedDate && (
          <span class="text-text-muted text-sm">
            (Updated {formattedUpdatedDate})
          </span>
        )}
        {readingTime && (
          <span class="text-text-muted text-sm">· {readingTime}</span>
        )}
      </div>

      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-4">
          {tags.map((tag) => (
            <span class="bg-bg-surface text-text-muted text-xs px-3 py-1 rounded-full border border-border-muted">
              {tag}
            </span>
          ))}
        </div>
      )}

      {heroImage && (
        <img
          src={heroImage}
          alt={title}
          class="w-full rounded-lg mt-8"
        />
      )}
    </header>

    <article class="article-content mt-12">
      <slot />
    </article>

    <hr class="border-border-muted my-12" />
    <a href="/articles" class="text-accent-cyan text-sm hover:underline">
      ← All Articles
    </a>
  </main>
</BaseLayout>

<style>
  .article-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
    font-family: var(--font-heading);
  }

  .article-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-primary);
    font-family: var(--font-heading);
  }

  .article-content :global(p) {
    color: var(--color-text-secondary);
    line-height: 1.625;
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .article-content :global(a) {
    color: var(--color-accent-cyan);
  }

  .article-content :global(a:hover) {
    text-decoration: underline;
  }

  .article-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    background-color: var(--color-bg-surface);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    color: var(--color-accent-violet);
  }

  .article-content :global(pre) {
    background-color: var(--color-bg-surface);
    border: 1px solid var(--color-border-muted);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
  }

  .article-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
    color: inherit;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .article-content :global(ul) {
    list-style-type: disc;
  }

  .article-content :global(ol) {
    list-style-type: decimal;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .article-content :global(blockquote) {
    border-left: 2px solid var(--color-accent-cyan);
    padding-left: 1rem;
    font-style: italic;
    color: var(--color-text-muted);
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .article-content :global(img) {
    border-radius: 0.5rem;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .article-content :global(hr) {
    border-color: var(--color-border-muted);
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
</style>
