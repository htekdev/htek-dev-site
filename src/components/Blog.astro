---
const articles = [
  {
    title: 'Lessons from 500+ GitHub Migrations',
    date: 'Dec 19, 2025',
    tags: ['devops', 'github', 'automation', 'opensource'],
    readTime: '5 min read',
    url: 'https://dev.to/htekdev/lessons-from-500-github-migrations-4fjd',
  },
];

const isFeatured = articles.length === 1;
---

<section id="blog" class="py-24 px-6">
  <div class="max-w-5xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">
        Blog <span class="text-accent-cyan">&</span> Articles
      </h2>
      <p class="text-text-secondary text-lg">Sharing insights from the trenches</p>
    </div>

    <!-- Articles -->
    {isFeatured ? (
      <!-- Featured single-article hero card -->
      <div class="group relative rounded-2xl border border-border/60 bg-bg-secondary/60 backdrop-blur-md p-8 md:p-12 hover:border-accent-cyan/40 transition-all duration-500 hover:shadow-[0_0_40px_rgba(0,229,255,0.08)]">
        <span class="inline-block text-xs font-mono text-accent-cyan/70 tracking-widest uppercase mb-4">
          Featured Article
        </span>
        <a href={articles[0].url} target="_blank" rel="noopener" class="block">
          <h3 class="text-2xl md:text-3xl font-heading font-bold text-text-primary group-hover:text-accent-cyan transition-colors duration-300 mb-4">
            {articles[0].title}
          </h3>
        </a>
        <div class="flex flex-wrap items-center gap-4 mb-6 text-sm text-text-secondary">
          <time class="font-mono">{articles[0].date}</time>
          <span class="text-border">•</span>
          <span class="font-mono">{articles[0].readTime}</span>
        </div>
        <div class="flex flex-wrap gap-2 mb-8">
          {articles[0].tags.map((tag: string) => (
            <span class="px-3 py-1 text-xs font-mono rounded-full border border-accent-purple/30 text-accent-purple bg-accent-purple/5">
              #{tag}
            </span>
          ))}
        </div>
        <a
          href={articles[0].url}
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 text-accent-cyan font-medium hover:gap-3 transition-all duration-300"
        >
          Read on DEV.to
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    ) : (
      <!-- Multi-article grid (future use) -->
      <div class="grid md:grid-cols-2 gap-6">
        {articles.map((article) => (
          <div class="group rounded-xl border border-border/60 bg-bg-secondary/60 backdrop-blur-md p-6 hover:border-accent-cyan/40 transition-all duration-500 hover:shadow-[0_0_30px_rgba(0,229,255,0.06)]">
            <a href={article.url} target="_blank" rel="noopener" class="block">
              <h3 class="text-xl font-heading font-bold text-text-primary group-hover:text-accent-cyan transition-colors duration-300 mb-3">
                {article.title}
              </h3>
            </a>
            <div class="flex items-center gap-3 mb-4 text-sm text-text-secondary">
              <time class="font-mono">{article.date}</time>
              <span class="text-border">•</span>
              <span class="font-mono">{article.readTime}</span>
            </div>
            <div class="flex flex-wrap gap-2 mb-5">
              {article.tags.map((tag: string) => (
                <span class="px-2.5 py-0.5 text-xs font-mono rounded-full border border-accent-purple/30 text-accent-purple bg-accent-purple/5">
                  #{tag}
                </span>
              ))}
            </div>
            <a
              href={article.url}
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-2 text-sm text-accent-cyan hover:gap-3 transition-all duration-300"
            >
              Read on DEV.to →
            </a>
          </div>
        ))}
      </div>
    )}

    <!-- Footer links -->
    <div class="mt-12 flex flex-col sm:flex-row items-center justify-between gap-6 text-sm">
      <a
        href="https://dev.to/htekdev"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-2 text-accent-cyan hover:gap-3 font-medium transition-all duration-300"
      >
        More on DEV.to
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <p class="text-text-secondary text-center sm:text-right">
        Follow my thoughts on AI, DevOps & Developer tools on
        <a
          href="https://linkedin.com/in/htekdev"
          target="_blank"
          rel="noopener"
          class="text-accent-cyan hover:underline underline-offset-4"
        >
          LinkedIn
        </a>
      </p>
    </div>
  </div>
</section>
