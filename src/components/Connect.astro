---

<section id="connect" class="fade-in relative py-24 md:py-32 bg-bg-primary overflow-hidden">
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-accent-cyan/5 rounded-full blur-3xl pointer-events-none"></div>

  <div class="relative max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <span class="inline-block font-mono text-accent-cyan text-sm tracking-wider mb-4">// connect</span>
      <h2 class="text-3xl md:text-4xl font-heading font-bold text-text-primary mb-4">
        <span class="bg-gradient-to-r from-accent-cyan to-accent-purple bg-clip-text text-transparent">Connect</span>
      </h2>
      <p class="text-text-muted text-lg">Find me everywhere as <span class="font-mono text-accent-cyan">@htekdev</span></p>
    </div>

    <!-- Social Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-12">
      {socials.map((s) => (
        <SocialCard
          platform={s.platform}
          url={s.url}
          handle={s.handle}
          description={s.description}
          brandColor={s.brandColor}
          icon={s.icon}
        />
      ))}
    </div>
  </div>
</section>
