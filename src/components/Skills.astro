---
interface Skill {
  name: string;
  active?: boolean;
}

interface SkillCategory {
  title: string;
  era?: string;
  skills: Skill[];
  highlight?: boolean;
}

const categories: SkillCategory[] = [
  {
    title: 'Systems & Low-Level',
    era: '2011–2014',
    skills: [
      { name: 'C' },
      { name: 'Assembly' },
      { name: 'PowerShell', active: true },
      { name: 'Server Management' },
    ],
  },
  {
    title: 'Web & Application Development',
    era: '2014–2020',
    skills: [
      { name: 'JavaScript', active: true },
      { name: 'TypeScript', active: true },
      { name: 'React', active: true },
      { name: 'React Native' },
      { name: 'C#', active: true },
      { name: '.NET', active: true },
      { name: 'PHP' },
      { name: 'Elixir' },
      { name: 'Node.js', active: true },
      { name: 'HTML/CSS', active: true },
    ],
  },
  {
    title: 'Cloud & Infrastructure',
    era: '2017–Present',
    skills: [
      { name: 'Azure', active: true },
      { name: 'AWS', active: true },
      { name: 'Kubernetes', active: true },
      { name: 'Docker', active: true },
      { name: 'Terraform', active: true },
      { name: 'Bicep', active: true },
      { name: 'Infrastructure as Code', active: true },
    ],
  },
  {
    title: 'DevOps & Platform Engineering',
    era: '2017–Present',
    skills: [
      { name: 'GitHub Actions', active: true },
      { name: 'Azure DevOps', active: true },
      { name: 'CI/CD Pipelines', active: true },
      { name: 'Git', active: true },
      { name: 'PowerShell Automation', active: true },
      { name: 'Azure Container Apps', active: true },
    ],
  },
  {
    title: 'AI & Emerging Tech',
    era: '2023–Present',
    highlight: true,
    skills: [
      { name: 'GitHub Copilot', active: true },
      { name: 'Prompt Engineering', active: true },
      { name: 'GPT/LLMs', active: true },
      { name: 'Copilot SDK', active: true },
      { name: 'Agentic AI', active: true },
      { name: 'MCP', active: true },
      { name: 'Blockchain/Web3' },
    ],
  },
  {
    title: 'Leadership & Strategy',
    skills: [
      { name: 'Technical Management', active: true },
      { name: 'DevOps Strategy', active: true },
      { name: 'Digital Transformation', active: true },
      { name: 'Enterprise Architecture', active: true },
      { name: 'Migration Planning', active: true },
    ],
  },
];
---

<section id="skills" class="py-24 px-6">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">
        Skills &amp;{' '}
        <span class="text-accent-cyan">Expertise</span>
      </h2>
      <p class="text-text-secondary text-lg font-mono">
        &gt; 14+ years across every layer of the stack
      </p>
    </div>

    <!-- Skills Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {categories.map((cat) => (
        <div
          class:list={[
            'rounded-2xl p-6 backdrop-blur-lg border transition-all duration-300 hover:-translate-y-1',
            cat.highlight
              ? 'bg-bg-secondary/60 border-transparent skill-card-highlight'
              : 'bg-bg-secondary/40 border-border/50 hover:border-accent-cyan/30',
          ]}
        >
          <div class="flex items-baseline justify-between mb-4">
            <h3
              class:list={[
                'text-lg font-heading font-semibold',
                cat.highlight ? 'text-accent-cyan' : 'text-text-primary',
              ]}
            >
              {cat.title}
            </h3>
            {cat.era && (
              <span class="text-xs font-mono text-text-tertiary">{cat.era}</span>
            )}
          </div>

          <div class="flex flex-wrap gap-2">
            {cat.skills.map((skill) => (
              <span
                class:list={[
                  'px-3 py-1 rounded-full text-sm font-mono transition-colors duration-200',
                  skill.active
                    ? 'border border-accent-cyan/40 text-accent-cyan bg-accent-cyan/5 hover:bg-accent-cyan/10'
                    : 'border border-border/60 text-text-tertiary bg-bg-tertiary/30',
                ]}
              >
                {skill.name}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Currently exploring -->
    <div class="mt-12 text-center">
      <p class="text-text-secondary font-mono text-sm">
        <span class="text-accent-purple">&#47;&#47;</span> Currently exploring:{' '}
        <span class="text-accent-cyan">Agentic AI</span>,{' '}
        <span class="text-accent-cyan">Copilot SDK</span>,{' '}
        <span class="text-accent-cyan">Video Processing</span>
        <span class="animate-pulse">_</span>
      </p>
    </div>
  </div>
</section>

<style>
  .skill-card-highlight {
    background-image: linear-gradient(var(--color-bg-secondary), var(--color-bg-secondary));
    border-image: linear-gradient(135deg, var(--color-accent-cyan), var(--color-accent-purple), var(--color-accent-pink)) 1;
    border-width: 1px;
    border-style: solid;
    position: relative;
    overflow: hidden;
  }

  /* Use a pseudo-element for a smooth rounded gradient border */
  .skill-card-highlight {
    border-image: none;
    border-color: transparent;
  }

  .skill-card-highlight::before {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(135deg, var(--color-accent-cyan), var(--color-accent-purple), var(--color-accent-pink));
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask-composite: exclude;
    pointer-events: none;
    z-index: 0;
  }

  .skill-card-highlight::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: radial-gradient(ellipse at 30% 0%, var(--color-glow-cyan), transparent 60%),
                radial-gradient(ellipse at 70% 100%, var(--color-glow-purple), transparent 60%);
    opacity: 0.4;
    pointer-events: none;
    z-index: 0;
  }

  .skill-card-highlight > * {
    position: relative;
    z-index: 1;
  }
</style>
