---
// Generate star positions at build time â€” no client JS needed
const stars = Array.from({ length: 120 }, (_, i) => ({
  x: Math.random() * 100,
  y: Math.random() * 100,
  size: 1 + Math.random() * 2.5,
  delay: Math.random() * 4,
  duration: 2 + Math.random() * 3,
  opacity: 0.3 + Math.random() * 0.7,
}));

const brightStars = Array.from({ length: 15 }, (_, i) => ({
  x: Math.random() * 100,
  y: Math.random() * 100,
  size: 3 + Math.random() * 2,
  delay: Math.random() * 5,
  duration: 3 + Math.random() * 4,
}));
---

<section id="hero" class="relative min-h-screen overflow-hidden bg-bg-void">
  <!-- Stars -->
  <div class="absolute inset-0" aria-hidden="true">
    {stars.map((s, i) => (
      <div
        class="star"
        style={`left:${s.x}%;top:${s.y}%;width:${s.size}px;height:${s.size}px;opacity:${s.opacity};animation-delay:${s.delay}s;animation-duration:${s.duration}s;`}
      />
    ))}
    {brightStars.map((s, i) => (
      <div
        class="bright-star"
        style={`left:${s.x}%;top:${s.y}%;width:${s.size}px;height:${s.size}px;animation-delay:${s.delay}s;animation-duration:${s.duration}s;`}
      />
    ))}
  </div>

  <!-- Orbital rings -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none" aria-hidden="true">
    <div class="orbital orbital-1"></div>
    <div class="orbital orbital-2"></div>
    <div class="orbital orbital-3"></div>
  </div>

  <!-- Subtle radial glow at center -->
  <div class="hero-glow" aria-hidden="true"></div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col items-center justify-center min-h-screen text-center px-6">
