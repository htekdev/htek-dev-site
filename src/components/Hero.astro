<style>
  /* Social badges */
  .social-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.3rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-muted);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 9999px;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(4px);
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .social-badge:hover {
    color: var(--color-accent-cyan);
    border-color: rgba(0, 229, 255, 0.3);
    background: rgba(0, 229, 255, 0.05);
    box-shadow: 0 0 12px rgba(0, 229, 255, 0.1);
  }

  /* Stars */
  .star {
    position: absolute;
    border-radius: 50%;
    background: #c9d1d9;
    animation: twinkle ease-in-out infinite alternate;
  }

  .bright-star {
    position: absolute;
    border-radius: 50%;
    background: #ffffff;
    box-shadow: 0 0 6px 2px rgba(88, 166, 255, 0.4), 0 0 12px 4px rgba(88, 166, 255, 0.15);
    animation: twinkle-bright ease-in-out infinite alternate;
  }

  @keyframes twinkle {
    0% { opacity: 0.15; transform: scale(0.8); }
    100% { opacity: var(--tw-opacity, 0.7); transform: scale(1); }
  }

  @keyframes twinkle-bright {
    0% { opacity: 0.3; transform: scale(0.7); filter: blur(0px); }
    100% { opacity: 1; transform: scale(1.2); filter: blur(0.5px); }
  }

  /* Orbital rings */
  .orbital {
    position: absolute;
    border-radius: 50%;
    border: 1px solid transparent;
  }

  .orbital-1 {
    width: 380px;
    height: 380px;
    border-color: rgba(88, 166, 255, 0.07);
    animation: spin 45s linear infinite;
    transform: rotateX(65deg);
  }

  .orbital-2 {
    width: 560px;
    height: 560px;
    border-color: rgba(188, 140, 255, 0.05);
    animation: spin 60s linear infinite reverse;
    transform: rotateX(70deg) rotateZ(30deg);
  }

  .orbital-3 {
    width: 750px;
    height: 750px;
    border-color: rgba(247, 129, 102, 0.04);
    animation: spin 80s linear infinite;
    transform: rotateX(60deg) rotateZ(-20deg);
  }

  /* Small dot on each orbital */
  .orbital::after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .orbital-1::after {
    background: rgba(88, 166, 255, 0.6);
    box-shadow: 0 0 8px 2px rgba(88, 166, 255, 0.3);
  }

  .orbital-2::after {
    background: rgba(188, 140, 255, 0.5);
    box-shadow: 0 0 8px 2px rgba(188, 140, 255, 0.25);
    width: 3px;
    height: 3px;
  }

  .orbital-3::after {
    background: rgba(247, 129, 102, 0.4);
    box-shadow: 0 0 6px 2px rgba(247, 129, 102, 0.2);
    width: 3px;
    height: 3px;
  }

  @keyframes spin {
    from { rotate: 0deg; }
    to { rotate: 360deg; }
  }

  /* Center glow */
  .hero-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse 600px 400px at center,
      rgba(88, 166, 255, 0.04) 0%,
      rgba(188, 140, 255, 0.02) 30%,
      transparent 70%
    );
    pointer-events: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .star, .bright-star { animation: none !important; opacity: 0.5 !important; }
    .orbital { animation: none !important; }
    .animate-bounce { animation: none !important; }
  }
</style>
