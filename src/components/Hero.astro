---
// Generate star positions at build time — no client JS needed
const stars = Array.from({ length: 120 }, (_, i) => ({
  x: Math.random() * 100,
  y: Math.random() * 100,
  size: 1 + Math.random() * 2.5,
  delay: Math.random() * 4,
  duration: 2 + Math.random() * 3,
  opacity: 0.3 + Math.random() * 0.7,
}));

const brightStars = Array.from({ length: 15 }, (_, i) => ({
  x: Math.random() * 100,
  y: Math.random() * 100,
  size: 3 + Math.random() * 2,
  delay: Math.random() * 5,
  duration: 3 + Math.random() * 4,
}));
---

<section id="hero" class="relative min-h-screen overflow-hidden bg-bg-void">
  <!-- Stars -->
  <div class="absolute inset-0" aria-hidden="true">
    {stars.map((s, i) => (
      <div
        class="star"
        style={`left:${s.x}%;top:${s.y}%;width:${s.size}px;height:${s.size}px;opacity:${s.opacity};animation-delay:${s.delay}s;animation-duration:${s.duration}s;`}
      />
    ))}
    {brightStars.map((s, i) => (
      <div
        class="bright-star"
        style={`left:${s.x}%;top:${s.y}%;width:${s.size}px;height:${s.size}px;animation-delay:${s.delay}s;animation-duration:${s.duration}s;`}
      />
    ))}
  </div>

  <!-- Orbital rings -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none" aria-hidden="true">
    <div class="orbital orbital-1"></div>
    <div class="orbital orbital-2"></div>
    <div class="orbital orbital-3"></div>
  </div>

  <!-- Subtle radial glow at center -->
  <div class="hero-glow" aria-hidden="true"></div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col items-center justify-center min-h-screen text-center px-6">
    <h1 class="text-6xl md:text-8xl lg:text-9xl font-heading font-extrabold tracking-tight gradient-text">
      Hector Flores
    </h1>
    <p class="text-lg md:text-xl font-light text-text-secondary mt-4 tracking-wide">
      Senior Solutions Engineer · Microsoft
    </p>
    <p class="text-sm md:text-base text-text-muted mt-2 tracking-widest uppercase">
      Inspiring a new era of software through AI
    </p>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10">
    <a href="#about" class="block text-text-muted hover:text-text-secondary transition-colors" aria-label="Scroll down">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </a>
  </div>
</section>

<style>
  /* Stars */
  .star {
    position: absolute;
    border-radius: 50%;
    background: #c9d1d9;
    animation: twinkle ease-in-out infinite alternate;
  }

  .bright-star {
    position: absolute;
    border-radius: 50%;
    background: #ffffff;
    box-shadow: 0 0 6px 2px rgba(88, 166, 255, 0.4), 0 0 12px 4px rgba(88, 166, 255, 0.15);
    animation: twinkle-bright ease-in-out infinite alternate;
  }

  @keyframes twinkle {
    0% { opacity: 0.15; transform: scale(0.8); }
    100% { opacity: var(--tw-opacity, 0.7); transform: scale(1); }
  }

  @keyframes twinkle-bright {
    0% { opacity: 0.3; transform: scale(0.7); filter: blur(0px); }
    100% { opacity: 1; transform: scale(1.2); filter: blur(0.5px); }
  }

  /* Orbital rings */
  .orbital {
    position: absolute;
    border-radius: 50%;
    border: 1px solid transparent;
  }

  .orbital-1 {
    width: 380px;
    height: 380px;
    border-color: rgba(88, 166, 255, 0.07);
    animation: spin 45s linear infinite;
    transform: rotateX(65deg);
  }

  .orbital-2 {
    width: 560px;
    height: 560px;
    border-color: rgba(188, 140, 255, 0.05);
    animation: spin 60s linear infinite reverse;
    transform: rotateX(70deg) rotateZ(30deg);
  }

  .orbital-3 {
    width: 750px;
    height: 750px;
    border-color: rgba(247, 129, 102, 0.04);
    animation: spin 80s linear infinite;
    transform: rotateX(60deg) rotateZ(-20deg);
  }

  /* Small dot on each orbital */
  .orbital::after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .orbital-1::after {
    background: rgba(88, 166, 255, 0.6);
    box-shadow: 0 0 8px 2px rgba(88, 166, 255, 0.3);
  }

  .orbital-2::after {
    background: rgba(188, 140, 255, 0.5);
    box-shadow: 0 0 8px 2px rgba(188, 140, 255, 0.25);
    width: 3px;
    height: 3px;
  }

  .orbital-3::after {
    background: rgba(247, 129, 102, 0.4);
    box-shadow: 0 0 6px 2px rgba(247, 129, 102, 0.2);
    width: 3px;
    height: 3px;
  }

  @keyframes spin {
    from { rotate: 0deg; }
    to { rotate: 360deg; }
  }

  /* Center glow */
  .hero-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse 600px 400px at center,
      rgba(88, 166, 255, 0.04) 0%,
      rgba(188, 140, 255, 0.02) 30%,
      transparent 70%
    );
    pointer-events: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .star, .bright-star { animation: none !important; opacity: 0.5 !important; }
    .orbital { animation: none !important; }
    .animate-bounce { animation: none !important; }
  }
</style>
