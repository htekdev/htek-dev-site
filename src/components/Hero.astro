---
const taglines = [
  "Inspiring a New Era of Software Development",
  "From Assembly to AI — 14+ Years Building the Future",
  "If I don't know it, I will asap. If I know it, watch out...",
  "Senior Solutions Engineer @ Microsoft",
];

const stats = [
  { value: "14+", label: "Years" },
  { value: "500+", label: "Migrations" },
  { value: "Fortune 500", label: "Clients" },
  { value: "Open Source", label: "Contributor" },
];
---

<section id="hero" class="relative min-h-screen flex flex-col items-center justify-center overflow-hidden pt-20 pb-12">
  <!-- Animated gradient mesh background -->
  <div class="hero-bg" aria-hidden="true">
    <div class="hero-orb hero-orb--cyan"></div>
    <div class="hero-orb hero-orb--purple"></div>
    <div class="hero-orb hero-orb--pink"></div>
    <div class="hero-orb hero-orb--teal"></div>
  </div>

  <!-- Noise overlay for texture -->
  <div class="absolute inset-0 opacity-[0.03] bg-[url('data:image/svg+xml;base64,')] pointer-events-none" aria-hidden="true"></div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col items-center text-center px-6 max-w-5xl mx-auto flex-1 justify-center">
    <!-- Terminal subtitle -->
    <p class="font-mono text-accent-cyan text-sm sm:text-base mb-6 tracking-wider">
      <span class="text-text-tertiary">&gt;</span> htek.dev<span class="terminal-cursor">_</span>
    </p>

    <!-- Main heading -->
    <h1 class="font-heading font-bold text-6xl sm:text-7xl md:text-8xl lg:text-9xl leading-none mb-8">
      <span class="hero-name bg-gradient-to-r from-accent-cyan via-accent-purple to-accent-pink bg-clip-text text-transparent">
        Hector Flores
      </span>
    </h1>

    <!-- Typewriter -->
    <div class="h-10 sm:h-12 flex items-center justify-center mb-10">
      <p class="font-mono text-sm sm:text-base md:text-lg text-text-secondary">
        <span class="text-accent-purple mr-1">&gt;</span>
        <span id="typewriter" class="typewriter-text"></span>
        <span class="typewriter-caret">|</span>
      </p>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center gap-4 mb-16">
      <a
        href="#projects"
        class="group relative px-8 py-3 rounded-lg border border-accent-cyan/60 text-accent-cyan font-medium text-sm tracking-wide transition-all duration-300 hover:border-accent-cyan hover:shadow-[0_0_20px_rgba(0,229,255,0.2)] hover:bg-accent-cyan/5"
      >
        <span class="relative z-10">View My Work</span>
      </a>
      <a
        href="#blog"
        class="group px-8 py-3 rounded-lg border border-accent-purple/40 text-text-secondary font-medium text-sm tracking-wide transition-all duration-300 hover:border-accent-purple/80 hover:text-accent-purple hover:bg-accent-purple/5"
      >
        Read the Blog
      </a>
    </div>
  </div>

  <!-- Stats strip -->
  <div class="relative z-10 w-full max-w-4xl mx-auto px-6">
    <div class="flex flex-wrap items-center justify-center gap-y-4 border-t border-border/40 pt-6">
      {stats.map((stat, i) => (
        <div class="flex items-center">
          <div class="text-center px-4 sm:px-8">
            <span class="block text-sm sm:text-base font-heading font-semibold text-text-primary">{stat.value}</span>
            <span class="block text-xs text-text-tertiary uppercase tracking-wider mt-0.5">{stat.label}</span>
          </div>
          {i < stats.length - 1 && (
            <div class="hidden sm:block w-px h-8 bg-border/50" aria-hidden="true"></div>
          )}
        </div>
      ))}
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="relative z-10 mt-8">
    <a href="#about" class="scroll-indicator block text-text-tertiary hover:text-accent-cyan transition-colors" aria-label="Scroll down">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </a>
  </div>
</section>

<style>
  /* ===== Animated gradient mesh ===== */
  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.35;
    will-change: transform;
  }

  .hero-orb--cyan {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, #00E5FF 0%, transparent 70%);
    top: -15%;
    right: -10%;
    animation: drift-1 18s ease-in-out infinite;
  }

  .hero-orb--purple {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, #7C3AED 0%, transparent 70%);
    bottom: -10%;
    left: -5%;
    animation: drift-2 22s ease-in-out infinite;
  }

  .hero-orb--pink {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #EC4899 0%, transparent 70%);
    top: 40%;
    left: 50%;
    transform: translateX(-50%);
    animation: drift-3 20s ease-in-out infinite;
  }

  .hero-orb--teal {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, #06B6D4 0%, transparent 70%);
    top: 10%;
    left: 15%;
    opacity: 0.2;
    animation: drift-4 25s ease-in-out infinite;
  }

  @keyframes drift-1 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25%      { transform: translate(-60px, 40px) scale(1.1); }
    50%      { transform: translate(-30px, 80px) scale(0.95); }
    75%      { transform: translate(40px, 30px) scale(1.05); }
  }

  @keyframes drift-2 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25%      { transform: translate(50px, -30px) scale(1.08); }
    50%      { transform: translate(80px, -60px) scale(0.92); }
    75%      { transform: translate(20px, -20px) scale(1.04); }
  }

  @keyframes drift-3 {
    0%, 100% { transform: translateX(-50%) translate(0, 0) scale(1); }
    33%      { transform: translateX(-50%) translate(60px, -40px) scale(1.12); }
    66%      { transform: translateX(-50%) translate(-40px, 30px) scale(0.9); }
  }

  @keyframes drift-4 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50%      { transform: translate(40px, 50px) scale(1.15); }
  }

  /* ===== Terminal cursor blink ===== */
  .terminal-cursor {
    animation: blink-cursor 1s step-end infinite;
    color: var(--color-accent-cyan);
  }

  /* ===== Typewriter ===== */
  .typewriter-caret {
    animation: blink-cursor 0.75s step-end infinite;
    color: var(--color-accent-cyan);
    font-weight: 300;
  }

  @keyframes blink-cursor {
    0%, 100% { opacity: 1; }
    50%      { opacity: 0; }
  }

  /* ===== Name entrance ===== */
  .hero-name {
    animation: fade-up 0.8s ease-out both;
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ===== Scroll indicator bounce ===== */
  .scroll-indicator {
    animation: bounce-down 2s ease-in-out infinite;
  }

  @keyframes bounce-down {
    0%, 100% { transform: translateY(0); }
    50%      { transform: translateY(8px); }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-orb,
    .terminal-cursor,
    .typewriter-caret,
    .hero-name,
    .scroll-indicator {
      animation: none !important;
    }
  }
</style>

<script>
  const taglines = [
    "Inspiring a New Era of Software Development",
    "From Assembly to AI — 14+ Years Building the Future",
    "If I don't know it, I will asap. If I know it, watch out...",
    "Senior Solutions Engineer @ Microsoft",
  ];

  const el = document.getElementById("typewriter");
  if (el) {
    let lineIdx = 0;
    let charIdx = 0;
    let isDeleting = false;
    const TYPE_SPEED = 50;
    const DELETE_SPEED = 30;
    const PAUSE_AFTER_TYPE = 2200;
    const PAUSE_AFTER_DELETE = 400;

    function tick() {
      const currentLine = taglines[lineIdx];

      if (!isDeleting) {
        el.textContent = currentLine.slice(0, charIdx + 1);
        charIdx++;

        if (charIdx >= currentLine.length) {
          isDeleting = true;
          setTimeout(tick, PAUSE_AFTER_TYPE);
          return;
        }
        setTimeout(tick, TYPE_SPEED);
      } else {
        el.textContent = currentLine.slice(0, charIdx);
        charIdx--;

        if (charIdx < 0) {
          isDeleting = false;
          charIdx = 0;
          lineIdx = (lineIdx + 1) % taglines.length;
          setTimeout(tick, PAUSE_AFTER_DELETE);
          return;
        }
        setTimeout(tick, DELETE_SPEED);
      }
    }

    // Start after a brief delay for page load
    setTimeout(tick, 600);
  }
</script>
